{% extends 'base.html.twig' %}

{% block title %}Hello BlogController!{% endblock %}

{% block body %}
  <h1>Product index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Title</th>
                <th>Slug</th>
                <th>CreationDate</th>
                <th>Published</th>
                <th>PublishedDate</th>
                <th>Content</th>
                <th>Image</th>
            </tr>
        </thead>
        <tbody>
        {% for post in posts %}
            <tr>
                <td>{{ post.title }}</td>
                <td>{{ post.slug }}</td>
                <td>{{ post.creationDate | date('Y-m-d H:i:s') }}</td>
                <td>{{ post.published }}</td>
                <td>{{ post.publishedDate | date('Y-m-d H:i:s')}}</td>
                <td>{{ post.content }}</td>
                <td>{{ post.image }}</td>
                <td>
                    <a href="{{ path('blog_show', {'id': post.id}) }}">show</a>
                    <a href="{{ path('blog_edit', {'id': post.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('product_new') }}">Create new</a>
{% endblock %}
